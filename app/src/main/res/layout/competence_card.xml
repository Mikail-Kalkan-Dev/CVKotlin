<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/competenceCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/cardImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:tag="image"
                tools:src="@tools:sample/avatars"
                />

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                tools:text="Symphony"
                android:layout_toEndOf="@id/cardImage"
                android:layout_alignTop="@id/cardImage"
                />

            <TextView
                android:id="@+id/cardSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="POO"
                android:layout_alignStart="@id/cardTitle"
                android:layout_below="@id/cardTitle"
            />


            <TextView
                android:id="@+id/cardInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/cardTitle"
                android:layout_below="@id/cardTitle"
                android:textSize="20sp"
                android:textAlignment="textEnd"
                tools:text="php" />

            <TextView
                android:id="@+id/cardLvl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="lvl: 2"
                android:textSize="20sp"
                android:textAlignment="textEnd"
                android:layout_alignEnd="@id/cardTitle"
                android:layout_below="@id/cardInfo"
            />



        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>